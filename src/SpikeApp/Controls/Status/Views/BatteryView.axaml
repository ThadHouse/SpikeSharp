<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpikeApp.Controls.Status.Views.BatteryView">
  <Grid ColumnDefinitions="*,*" RowDefinitions="*,*,*">
    <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="2">Battery</TextBlock>

    <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1">Voltage</TextBlock>
    <TextBlock HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1">Percentage</TextBlock>

    <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Text="{Binding Voltage}"/>
    <TextBlock HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" Text="{Binding Percentage}"/>

  </Grid>
</UserControl>
