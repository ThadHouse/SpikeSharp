<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpikeApp.Controls.Status.Views.ThreeAxisView">
  <Border BorderBrush="Black" BorderThickness="0,2,0,0">
    <Grid ColumnDefinitions="*,*,*" RowDefinitions="*,*,*">
      <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.ColumnSpan="3" Text="{Binding TypeName}"/>

      <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="1">X</TextBlock>
      <TextBlock HorizontalAlignment="Center" Grid.Column="1" Grid.Row="1">Y</TextBlock>
      <TextBlock HorizontalAlignment="Center" Grid.Column="2" Grid.Row="1">Z</TextBlock>

      <TextBlock HorizontalAlignment="Center" Grid.Column="0" Grid.Row="2" Text="{Binding X}"/>
      <TextBlock HorizontalAlignment="Center" Grid.Column="1" Grid.Row="2" Text="{Binding Y}"/>
      <TextBlock HorizontalAlignment="Center" Grid.Column="2" Grid.Row="2" Text="{Binding Z}"/>

    </Grid>
  </Border>
</UserControl>