<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpikeApp.Controls.Views.PortViewer">
  <Grid
    ColumnDefinitions="40,*"
    RowDefinitions="*,*">
    <TextBlock Grid.Row="0" Grid.Column="0" Text="{Binding PortText}"></TextBlock>
    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TypeText}"></TextBlock>
    <TextBlock Grid.Row="1" Grid.ColumnSpan="2" Text="{Binding StatusText}"></TextBlock>
  </Grid>
</UserControl>
