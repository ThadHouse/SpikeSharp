<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="SpikeApp.Controls.Views.SpikePortControl">
  <StackPanel>
    <TextBlock DockPanel.Dock="Top" HorizontalAlignment="Center">Device Status</TextBlock>
    <ComboBox HorizontalAlignment="Stretch" Items="{Binding Devices, Mode=TwoWay}" SelectedItem="{Binding SelectedDevice, Mode=TwoWay}"></ComboBox>
    <Grid
     ColumnDefinitions="50*, 50*"
     HorizontalAlignment="Stretch">
      <Button Grid.Column="0" HorizontalAlignment="Stretch" Command="{Binding RefreshBluetoothDevices}">Refresh Bluetooth</Button>
      <Button Grid.Column="1" HorizontalAlignment="Stretch" Command="{Binding RefreshDevices}">Refresh Serial</Button>
    </Grid>
    <Button HorizontalAlignment="Stretch" Command="{Binding Connect}" Content="{Binding ConnectText}"></Button>

  </StackPanel>
</UserControl>
