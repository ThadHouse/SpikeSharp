<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ctls="clr-namespace:SpikeApp.Controls.Views;assembly=SpikeApp"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        MinWidth="800" MinHeight="400"
        x:Class="SpikeApp.MainWindow"
        Title="Mindstorms Robotics Inventor - Spike Prime Controller">
  <Grid ColumnDefinitions="250, *, 250">
    <ctls:ConsoleControl VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Grid.Column="1"></ctls:ConsoleControl>
    <StackPanel HorizontalAlignment="Stretch"  Grid.Column="2">
      <ctls:SpikePortControl></ctls:SpikePortControl>
      <ctls:DeviceStatus></ctls:DeviceStatus>
    </StackPanel>
    <DockPanel Grid.Column="0" HorizontalAlignment="Stretch">
      <ctls:ProgramViewer></ctls:ProgramViewer>
    </DockPanel>
  </Grid>
</Window>
